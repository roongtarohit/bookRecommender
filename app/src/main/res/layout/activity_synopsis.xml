<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SynopsisActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="KITAAB TITLE"
            android:textColor="#02B1FF"
            android:textSize="20dp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/kitaabTitle"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"/>

        <TextView
            android:text="INFO LINK"
            android:textColor="#02B1FF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kitaabTitle"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/kitaabInfoLink"
            android:textColor="#000000"
            android:autoLink="web"
            android:linksClickable="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/link" />

        <TextView
            android:text="ASU LIBRARY LINK"
            android:textColor="#02B1FF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/asulink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kitaabInfoLink"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/kitaabASUlink"
            android:textColor="#000000"
            android:autoLink="web"
            android:linksClickable="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asulink" />

        <TextView
            android:text="DESCRIPTION"
            android:textColor="#02B1FF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kitaabASUlink"
            android:gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/kitaabDescription"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/description" />


    </RelativeLayout>

</ScrollView>